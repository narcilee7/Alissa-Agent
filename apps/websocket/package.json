{
  "name": "@alissa/websocket",
  "version": "0.0.1",
  "description": "WebSocket Service for Real-time Communication",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@alissa/shared": "workspace:*",
    "@alissa/monitoring": "workspace:*",
    "@alissa/kafka": "workspace:*",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsx": "^4.6.0"
  }
}
