{
    "name": "@alissa/tools",
    "version": "0.0.1",
    "description": "Tools for Alissa Agent",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest",
        "test:unit": "vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@alissa/shared": "workspace:*",
        "@alissa/monitoring": "workspace:*",
        "axios": "^1.6.2",
        "cheerio": "^1.0.0-rc.12",
        "puppeteer": "^21.6.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/cheerio": "^0.22.35",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    }
}