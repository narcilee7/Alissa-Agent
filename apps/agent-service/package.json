{
  "name": "@alissa/agent-service",
  "version": "0.0.1",
  "description": "Agent Service - Core AI Agent Orchestration",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@alissa/core": "workspace:*",
    "@alissa/shared": "workspace:*",
    "@alissa/database": "workspace:*",
    "@alissa/kafka": "workspace:*",
    "@alissa/monitoring": "workspace:*",
    "@alissa/providers": "workspace:*",
    "@alissa/services": "workspace:*",
    "@alissa/tools": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "reflect-metadata": "^0.1.13",
    "inversify": "^6.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "grpc-tools": "^1.12.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsx": "^4.6.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^2.0.16"
  }
}
